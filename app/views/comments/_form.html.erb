<%= form_with model: [ @article, @article.comments.build ] do |form| %>
   <p>
    <%= form.label :commenter, class: "block text-center text-gray-700 text-1xl font-bold mb-2"%>
    <%= form.text_field :commenter, class: "w-full px-3 py-2 border rounded-md text-md leading-tight focus:outline-none focus:shadow-outline" %>
  </p>
  <p>
    <%= form.label :body, class: "block text-center text-gray-700 text-1xl font-bold mb-2" %>
    <%= form.text_area :body, class: "w-full px-3 py-2 border rounded-md leading-tight focus:outline-none focus:shadow-outline" %>
  </p>
  <p>
 <p>
  <%= form.label :status, class: "block text-center mb-2 text-sm text-1xl font-bold text-gray-700 dark:text-white" %>
  <%= form.select :status, Visible::VALID_STATUSES, { selected: 'public' }, { class: "block mx-auto w-full p-2.5 text-sm rounded-lg bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", style: "width: 50%;"  } %>
</p>
<div class="border mx-auto bg-indigo-300 text-center text-gray-700 font-bold place-items-center rounded-[10rem] p-[4px] w-[200px] mt-5">
    <%= form.submit %>
    </div>
  </p>
<% end %>


