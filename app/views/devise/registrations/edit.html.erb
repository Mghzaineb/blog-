<div class=" bg-gray-800 w-full  ">
  <div class="container  py-20 ">
    <div class="grid grid-cols-1 md:grid-cols-3 ">
<h2 class="text-3xl font-extrabold text-center text-gray-800">Edit</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="bg-white rounded-lg shadow-lg p-8">
<h2 class="text-3xl font-extrabold text-center mb-5 text-gray-600 ">Edit</h2>

  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field mb-5">
    <%= f.label :email , class: "text-sm font-medium text-center text-gray-700"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field mb-5">
    <%= f.label :password, class: "text-sm font-medium text-gray-700" %> <br />
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
    <% if @minimum_password_length %>
      <br />
    <% end %>
  </div>

  <div class="field mb-5">
    <%= f.label :password_confirmation , class: "text-sm font-medium text-gray-700" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"%>
  </div>

  <div class="field mb-5">
    <%= f.label :current_password , class: "text-sm font-medium text-gray-700" %> <br />
    <%= f.password_field :current_password, autocomplete: "current-password" , class: "w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"%>
  </div>

  <div class="actions flex justify-center mt-2 gap-3 max-w-sm">
   <div  class="border bg-indigo-50 flex mx-auto items-center justify-center h-[40px] rounded-[10rem]  p-[4px] w-[100px]">
   <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 15.75 3 12m0 0 3.75-3.75M3 12h18" />
</svg>
 <%= link_to "Back", :back  %> 
</div>

    <%= f.submit "Update",class:"border bg-indigo-300 flex mx-auto items-center justify-center h-[40px] rounded-[10rem]  p-[4px] w-[100px] "%>



 <div class="border bg-indigo-50 flex mx-auto items-center justify-center h-[40px] rounded-[10rem]  p-[4px] w-[100px]" > <%= button_to "Cancel ", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>
</div><% end %></div></div>