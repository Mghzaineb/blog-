
<div class=" bg-gray-800   ">
 
    <div class="grid grid-cols-1 md:grid-cols-3 py-7  ">
     <h1 class="text-3xl font-extrabold text-center text-gray-800 mb-2"></h1>
            
            <%= form_with model: article do |f| %>
                 <div class="bg-gray-200 rounded-lg shadow-lg p-8">
               <div class=" mb-4 text-3xl font-extrabold text-center text-gray-700">New Article</div>
            
            <div class="mb-4"> 
                <%= f.label :title, class:"block text-gray-600 text-center text-1xl font-bold"  %><br>
                <%= f.text_field :title, class: "block w-full p-2.5 text-sm rounded-lg bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"%>
                <% article.errors.full_messages_for(:title).each do |message| %>
                    <div><%= message %></div>
                <% end %>
            </div>
  
            <div class="mb-4"> 
                <%= f.label :body, class: "block text-center text-gray-600 text-1xl font-bold "%><br>
                <%= f.text_area :body, class: "block w-full p-2.5 text-sm rounded-lg bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"%><br>
                <% article.errors.full_messages_for(:body).each do |message| %>
                    <div><%= message %></div>
                <% end %>
            </div>
  
    <div class="mb-4 ">
    <div class="field ">
        <%= f.label :image, class:"block  text-1xl text-center text-gray-600 font-bold " %>
    <div class="field flex mb-8 items-center">
    <label for="imageInput" class="flex items-center mx-auto space-x-2 cursor-pointer">
    <div class="bg-gray-200 text-white px-3 py-1">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-400">
    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
    </svg>
    </div>
    </label>
    <%= f.file_field :image, id: "imageInput", class: "hidden" %>
            </div>
  
  
            <div class="mb-4"> 
                <%= f.label :status, class: "block text-center text-sm font-bold  text-gray-600 text-1xl  " %>
                <%= f.select :status, Visible::VALID_STATUSES, { selected: 'public' }, { class: "block w-full mx-auto p-2.5 text-sm rounded-lg bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", style: "width: 100%;"} %>
            </div>
  
            <div class="mb-4">
                <div class="border bg-gray-400 text-center mx-auto place-items-center rounded-[10rem] p-[4px] w-[100px] hover:bg-gray-600">
                    <%= f.submit 'Add Article' %>
                </div>
            </div>
  
        <% end %>
        </div>
    </div>
</div>
</div>